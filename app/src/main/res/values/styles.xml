<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="countdown_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/countdown_text_size</item>
        <item name="android:textColor">@color/countdown_text_color</item>
        <item name="android:layout_marginTop">@dimen/countdown_big_margin</item>
        <item name="android:padding">@dimen/countdown_tv_padding</item>
        <item name="android:background">@drawable/countdown_textview</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/countdown_corner</item>
        <item name="cornerSizeTopLeft">@dimen/countdown_corner</item>
        <item name="cornerSizeBottomRight">@dimen/zero</item>
        <item name="cornerSizeBottomLeft">@dimen/zero</item>
    </style>


</resources>


